{% extends 'admin.html.twig' %}

{% block title %} {{ 'attribute.title.edit'|trans }} | ETS{% endblock %}

{% block admin_right_nav %}

    <ul class="section-nav">
        <li class="toc-entry">
            <p>{{ 'side_nav.navigation'|trans }}:</p>
        </li>
        <li class="toc-entry">
            <a class="btn btn-block btn-link text-left sidebar-collapse" href="#list-general" data-target="#home" data-target-animation="#attributeCaret1" aria-controls="home">{{ 'general'|trans }}</a>
        </li>
        <li class="toc-entry">
            <a class="btn btn-block btn-link text-left sidebar-collapse" href="#list-save">{{ 'button.save'|trans }}</a>
        </li>
        <div class="my-3"></div>
        <li class="toc-entry">
            <a href="" data-toggle="modal" data-target="#attributeModal{{ attribute.id }}Delete" class="modal-append-show badge badge-danger text-white">{{ 'attribute.button.delete'|trans }}</a>

            <div class="modal fade" id="attributeModal{{ attribute.id }}Delete" tabindex="-1" role="dialog" aria-labelledby="attributeModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="qattributeModalLabel">{{ 'attribute.delete_message'|trans }}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="d-flex justify-content-between">
                                {{ include('attribute/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
{% endblock %}

{% block admin_main %}

    <h1>{{ 'attribute.title.edit'|trans  }}</h1>
    {{ include('attribute/_form.html.twig', {'button_label': 'button.save'}) }}

{% endblock %}