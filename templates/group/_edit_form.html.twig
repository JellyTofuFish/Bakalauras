<form action="{{ path('group_edit', {id: group.id}) }}" method="post" class="groupsSubmit needs-validation" novalidate>

    <label for="inputgroupid{{ group.id }}" hidden></label>
    <input type="number" id="inputgroupid{{ group.id }}" value="{{ group.id }}" hidden>

    <div class="form-group row">
        <label for="inputgroupname{{ group.id }}" class="col-sm-2 col-form-label">{{ 'group.form.name_label'|trans }}</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputgroupname{{ group.id }}" value="{{ group.name }}" placeholder="{{ 'group.form.name_input_placeholder'|trans }}" required pattern=".{2,50}">
            <div class="invalid-feedback">
                {{ 'group.validation.name'|trans }}
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputgroupdesc{{ group.id }}" class="col-sm-2 col-form-label">{{ 'group.form.description_label'|trans }}</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="inputgroupdesc{{ group.id }}" placeholder="{{ 'group.form.description_input_placeholder'|trans }}">{{ group.description }}</textarea>
        </div>
    </div>

    <button class="btn btn-block btn-outline-primary btn-no-top-radius" type="submit">{{ button_label|default('Save') }}</button>

</form>