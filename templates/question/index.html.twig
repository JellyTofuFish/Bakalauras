{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row flex-xl-nowrap">
            <div class="col-12 col-md-3 col-xl-2 bd-sidebar">
                <nav class="collapse bd-links" id="bd-docs-nav">
                    <div class="bd-toc-item" >
                        <a class="bd-toc-link" href="">Name</a>
                    </div>

                </nav>
            </div>
            <div class="d-none d-xl-block col-xl-2 bd-toc">
                <p>One of three columns</p>
            </div>
            <div class="col-12 col-md-9 col-xl-8 py-md-3 pl-md-5 bd-content">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'question.id'|trans }}</th>
                        <th>{{ 'question.question.label'|trans }}</th>
                        <th>{{ 'question.description.label'|trans }}</th>
                        <th>{{ 'question.type.label'|trans }}</th>
                        <th>{{ 'question.active'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for question in questions %}
                        <tr>
                            <td>{{ question.id|trans }}</td>
                            <td>{{ question.question|trans }}</td>
                            <td>{{ question.description|trans }}</td>
                            <td>{{ question.type|trans }}</td>
                            <td>
                                <a href="{{ path('question_show', {'id': question.id}) }}">{{ 'button.show'|trans }}</a>
                                <a href="{{ path('question_edit', {'id': question.id}) }}">{{ 'button.edit'|trans }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('question_new') }}"> {{ 'button.new'|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}
