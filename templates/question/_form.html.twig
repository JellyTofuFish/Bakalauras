{{ form_start(form) }}

{% for error in form.vars.errors.form.getErrors(true) %}
    <div class="alert alert-danger">{{ error.message }}</div>
{% endfor %}

<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="list-general">
            <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#home" aria-expanded="true" aria-controls="home">
                    Bendra
                </button>
            </h2>
        </div>
        <div id="home" class="tab-pane collapse show" aria-labelledby="list-general list-general-list" data-parent="#accordionExample">
            <div class="card-body">
                <div class="form-group row">
                    {{ form_label(form.question, null, { 'label_attr': {'class':'col-sm-2 col-form-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.question, { 'attr': {'class':'form-control mb-3'} }) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.description, null, { 'label_attr': {'class':'col-sm-2 col-form-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.description, { 'attr': {'class':'form-control mb-3'} }) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.type, null, { 'label_attr': {'class':'col-sm-2 col-form-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.type, { 'attr': {'class':'form-control '} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header" id="list-groups">
            <h2 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#groups" aria-expanded="false" aria-controls="groups">
                    Grupes
                </button>
            </h2>
        </div>
        <div id="groups" class="tab-pane collapse" aria-labelledby="list-groups list-groups-list" data-parent="#accordionExample">
            <div class="card-body">
                <div class="form-group row">
                    {{ form_label(form.fk_group, null, { 'label_attr': {'class':'col-sm-2 col-form-label'} }) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.fk_group, { 'attr': {'class':'custom-select'} }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="card">
            <div class="card-header" id="list-settings">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#settings" aria-expanded="false" aria-controls="settings">
                        Parinktys
                    </button>
                </h2>
            </div>
            <div id="settings" class="collapse" aria-labelledby="list-settings list-settings-list" data-parent="#accordionExample">
                <div class="card-body">

                </div>
            </div>
        </div>
        <button class="btn btn-block btn-outline-primary" type="submit">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}